<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppToolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">?attr/colorPrimaryDark</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="subtitleTextColor">@android:color/white</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="Button" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:clickable">true</item>
        <item name="android:enabled">true</item>
        <item name="android:focusable">true</item>
        <item name="android:backgroundTint">@color/button</item>
    </style>

    <style name="tool_bar" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="itemBackground">@android:color/transparent</item>
        <item name="itemRippleColor">@android:color/transparent</item> <!--Убираем фон у иконок-->
    </style>

    <style name="icon_details" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:backgroundTint">#558C95</item>
    </style>

    <style name="RoundedShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="MyDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">#028072</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MyAppBarStyle" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:background">?attr/colorPrimaryDark</item>
        <item name="android:elevation">8dp</item>
    </style>



</resources>