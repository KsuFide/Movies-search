<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_settings"
    android:fillViewport="true"
    android:paddingBottom="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <!-- Заголовок категорий -->
        <TextView
            android:id="@+id/categoryTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:text="Выберите категорию по умолчанию:"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <!-- Контейнер для радиокнопок -->
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp" />

        <!-- Прогресс-бар для индикации смены категории -->
        <ProgressBar
            android:id="@+id/categoryChangeProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:visibility="gone" />

        <!-- Разделитель -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:background="#8D6E63" />

        <!-- Информация о кэше -->
        <TextView
            android:id="@+id/cacheInfoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Информация о кэше: загрузка..."
            android:textColor="#F5F5F5"
            android:textSize="16sp"
            android:fontFamily="sans-serif" />

        <!-- Количество фильмов -->
        <TextView
            android:id="@+id/filmCountText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="Фильмов в кэше: 0"
            android:textColor="#F5F5F5"
            android:textSize="16sp"
            android:fontFamily="sans-serif" />

        <!-- Кнопка очистки кэша -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/clearCacheButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Очистить кэш"
            app:backgroundTint="#5F4634"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            android:fontFamily="sans-serif-medium"
            style="@style/Widget.Material3.Button" />

    </LinearLayout>

</ScrollView>